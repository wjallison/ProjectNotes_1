<Window x:Class="ProjectNotes_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectNotes_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="mainDataGrid" Grid.Row="0" Grid.Column="0" ItemsSource="{Binding ProjectClass}">
            
        </DataGrid>

        <Button x:Name="addButton" Grid.Row="1" Grid.Column="0" Height="20" Width="80" Content="Add" 
                Click="addButton_Click"/>

    </Grid>
</Window>
